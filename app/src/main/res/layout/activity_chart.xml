<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/chart_tran50"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_height="300dp">
    <com.jin10.lgd.chart.view.BarChart
        android:id="@+id/bar_chart"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp">

    </com.jin10.lgd.chart.view.BarChart>
   <!-- <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试混合线"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/chart_white"
        android:text="实盘多空订单比"/>

    <LinearLayout
        android:id="@+id/ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/chart_dra_bg"
        android:orientation="horizontal">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ly_dou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_red"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toTopOf="@id/tv_more"
                app:layout_constraintBottom_toBottomOf="@id/tv_more"
                android:background="@color/chart_text_color"/>
            <TextView
                android:id="@+id/tv_more"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chart_white"
                app:layout_constraintLeft_toRightOf="@id/tv_red"
                android:text="2567人做多"/>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chart_white"
                android:text="4000多单（xxxxx）"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/tv_red"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_more"/>

            <TextView
                android:id="@+id/tv_green"
                android:layout_marginTop="10dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_content"
                android:background="@color/chart_text_green"/>
            <TextView
                android:id="@+id/tv_non"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chart_white"
                app:layout_constraintTop_toBottomOf="@id/tv_content"
                app:layout_constraintLeft_toRightOf="@id/tv_green"
                android:text="2567人做多"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/chart_white"
                android:text="4000多单（xxxxx）"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/tv_green"
                android:layout_marginLeft="8dp"

                app:layout_constraintTop_toBottomOf="@id/tv_non"/>
        </android.support.constraint.ConstraintLayout>

        <com.jin10.lgd.chart.view.DoughnutChart
            android:layout_weight="1"
            android:id="@+id/chart_dou"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_bar_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/chart_white"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ly"
        android:text="COME成交量"/>-->



</LinearLayout>
